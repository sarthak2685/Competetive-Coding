#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    while(cin>>n)
    {
        int count=0,k=0;
        for(int i=0;i<n;i++){
            int a;
            cin>>a;
            if(a>0) count+=a;
            else
            {
                if(count>0){
                    count--;
                }
                else k++;
            
            }
        }
        cout<<k<<endl;
    }
    return 0;
}
