#include<bits/stdc++.h>
using namespace std;
int main(){
    string s,t;
    int count=0,n;
    cin>>s>>t;
     n=s.size();
    for(int i=0;i<n;i++){
        
        if(s[i]==t[n-i-1]){ 
            count++;
            
           
            
        }
       
    }
    if(count==n) cout<<"YES";
    else cout<<"NO";
    
   
    return 0;
    
}
