#include<bits/stdc++.h>
using namespace std;
int main(){
   long long int n,k,a;
    cin>>n>>k;
    if(n%2==0){
        if(k<=n/2){
            a=2*k-1;
            cout<<a;
        }
        else{
            a=2*(k-n/2);
            cout<<a;
        }
    }
    else{
        if(k<=n/2+1){
            a=2*k-1;
            cout<<a;
        }
        else{
            a=2*(k-n/2-1);
            cout<<a;
        }
    }
    return 0;
}
